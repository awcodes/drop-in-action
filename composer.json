{
    "name": "awcodes/drop-in-action",
    "description": "A form component for Filamentphp allowing actions inside of forms.",
    "keywords": [
        "awcodes",
        "laravel",
        "drop-in-action"
    ],
    "homepage": "https://github.com/awcodes/drop-in-action",
    "license": "MIT",
    "authors": [
        {
            "name": "awcodes",
            "email": "awcodes1@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "filament/filament": "v3.0.0-alpha38",
        "spatie/laravel-package-tools": "^1.13.5",
        "illuminate/contracts": "^9.0|^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0|^7.0",
        "orchestra/testbench": "^7.0|^8.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "pestphp/pest-plugin-livewire": "^1.0",
        "pestphp/pest-plugin-parallel": "^0.3",
        "phpunit/phpunit": "^9.5|^10.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Awcodes\\DropInAction\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Awcodes\\DropInAction\\Tests\\": "tests"
        }
    },
    "scripts": {
        "pint": "vendor/bin/pint",
        "test:pest": "vendor/bin/pest --parallel",
        "test": [
            "@test:pest",
            "@test:phpstan"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Awcodes\\DropInAction\\DropInActionServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
